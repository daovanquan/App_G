<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidcode.imagegallery">

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.androidcode.imagegallery.views.Albumswipe_img"
            android:exported="false"
            android:label="@string/title_activity_albumswipe_img"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.androidcode.imagegallery.views.FullScreen"
            android:exported="false" />
        <activity
            android:name="com.androidcode.imagegallery.views.ImageDisplay"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.androidcode.imagegallery.views.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>